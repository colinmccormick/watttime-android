<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style 
        name="WattTimeTheme" parent="android:Theme.Holo.Light" >
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/WattTimeBar</item>
        <item name="android:background">#002C3C</item>
        <item name="android:textAppearanceLarge">@style/LargeTextAppearance</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

    </style>
    
    <style name="WattTimeBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#002C3C</item>
        <item name="android:titleTextStyle">@style/WattTimeActionBarTitleText</item>
    </style>
    
        <!-- ActionBar title text -->
    <style name="WattTimeActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
  	<style name="LargeTextAppearance" parent="@android:style/TextAppearance.Large">
    	<item name="android:textColor">#FFFFFF</item>
	</style>
	
  	<style name="GraphStyle">
  	    
  	    <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_width">"wrap_content"</item>
        <item name="android:layout_height">"wrap_content"</item>
            
            
        
        
  	</style>
    

</resources>
